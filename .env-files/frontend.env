# ====================================
# CONFIGURATION FRONTEND LIFEHUB
# ====================================
# Ce fichier est monté dans le conteneur frontend
# Modifiable par l'admin système

# API Backend
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Application
VITE_APP_NAME=LifeHub Smart Organizer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Organisateur personnel intelligent

# Environnement
NODE_ENV=production
VITE_ENVIRONMENT=production

# SSL/Security
VITE_ENABLE_SSL=true
VITE_SSL_VERIFY=false

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_OFFLINE=true

# UI/UX
VITE_THEME_DEFAULT=light
VITE_LANGUAGE_DEFAULT=fr

# Performance
VITE_CACHE_TIMEOUT=300000
VITE_REQUEST_TIMEOUT=10000

# External Services (si nécessaire)
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=

# ====================================
# NOTES ADMIN:
# - Redémarrer le conteneur frontend après modification
# - Les variables VITE_ sont compilées dans le build
# - Pour les changements en dev, rebuild l'image
# ==================================== 